Cabal-version: 2.2
Name:          copilot-verifier
Version:       0.0
Author:        Galois Inc.
Maintainer:    rdockins@galois.com
Copyright:     (c) Galois, Inc 2021
License:       BSD-3-Clause
License-file:  LICENSE
Build-type:    Simple
Category:      Language
Synopsis:      System for verifying the correctness of generated Copilot programs
Description:

common bldflags
  ghc-options: -Wall
               -Werror=incomplete-patterns
               -Werror=missing-methods
               -Werror=overlapping-patterns
               -Wpartial-fields
               -Wincomplete-uni-patterns
  ghc-prof-options: -O2 -fprof-auto-top
  default-language: Haskell2010
  default-extensions:
     NondecreasingIndentation
  build-depends:
    base >= 4.8 && < 4.15,
    bv-sized >= 1.0.0 && < 1.1,
    bytestring,
    containers >= 0.5.9.0,
    copilot >= 3.5,
    copilot-c99 >= 3.5,
    copilot-core >= 3.5,
    copilot-language >= 3.5,
    copilot-theorem >= 3.5,
    crucible,
    crucible-llvm,
    crux,
    crux-llvm,
    lens,
    llvm-pretty,
    mtl,
    panic >= 0.3,
    parameterized-utils >= 1.0.8 && < 2.2,
    prettyprinter >= 1.7.0,
    text,
    transformers,
    what4 >= 0.4

library
  import: bldflags

  hs-source-dirs: src
  exposed-modules:
    Copilot.Verifier

executable heater-verify
  import: bldflags

  hs-source-dirs: exe
  build-depends: copilot-verifier
  main-is: Heater.hs
  other-modules:

executable engine-verify
  import: bldflags

  hs-source-dirs: exe
  build-depends: copilot-verifier
  main-is: Engine.hs
  other-modules:

executable arith-verify
  import: bldflags

  hs-source-dirs: exe
  build-depends: copilot-verifier
  main-is: Arith.hs
  other-modules:

executable vote-verify
  import: bldflags

  hs-source-dirs: exe
  build-depends: copilot-verifier
  main-is: Voting.hs
  other-modules:
