Cabal-version: 2.2
Name:          copilot-verifier
Version:       0.0
Author:        Galois Inc.
Maintainer:    rdockins@galois.com
Copyright:     (c) Galois, Inc 2021
License:       BSD-3-Clause
License-file:  LICENSE
Build-type:    Simple
Category:      Language
Synopsis:      System for verifying the correctness of generated Copilot programs
Description:

common bldflags
  ghc-options: -Wall
               -Werror=incomplete-patterns
               -Werror=missing-methods
               -Werror=overlapping-patterns
               -Wpartial-fields
               -Wincomplete-uni-patterns
  ghc-prof-options: -O2 -fprof-auto-top
  default-language: Haskell2010


library
  import: bldflags
  build-depends:
    base >= 4.8 && < 4.15,
    bv-sized >= 1.0.0 && < 1.1,
    bytestring,
    containers >= 0.5.9.0,
    lens,
    mtl,
    panic >= 0.3,
    parameterized-utils >= 1.0.8 && < 2.2,
    prettyprinter >= 1.7.0,
    text,
    transformers,
    what4 >= 0.4

  default-extensions:
     NondecreasingIndentation

  hs-source-dirs: src

  exposed-modules:
    Copilot.Verifier  
